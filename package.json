{
  "name": "backend",
  "version": "1.0.0",
  "description": "a simple backend in nodejs with typescript for a jokenpo game",
  "main": "index.js",
  "author": "thalison.eduardo14@gmail.com<tedu14>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/main/index.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "yarn test --watch -c jest-unit.config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:integration": "yarn test --watch -c jest-integration.config.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "typescript-transform-paths": "^2.1.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "supertest": "^6.0.1",
    "uuidv4": "^6.2.6"
  }
