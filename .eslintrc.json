{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ignorePackages": true,
                "pattern": {
                    "ts": "never",
                    "js": "never"
                }
            }
        ],
        "class-methods-use-this": "off",
        "no-else-return": "off",
        "import/prefer-default-export": "off",
        "no-useless-constructor": "off",
        "import/no-unresolved": [
            2,
            { "caseSensitive": false }
         ],
         "camelcase": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
                "extensions":["js"]
            }
        }
    }
}
