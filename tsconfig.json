{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "paths": {
            "@game/*": ["modules/game/*"],
            "main/*": ["main/*"],
            "@docs/*": ["docs/*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts"],
    "exclude": ["**/*.spec.ts", "node_modules"]
}
